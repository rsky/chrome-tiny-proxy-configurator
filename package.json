{
  "name": "chroe-tiny-configurator",
  "license": "MIT",
  "version": "1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:rsky/chrome-tiny-proxy-configurator.git"
  },
  "scripts": {
    "build": "npm run build:background && npm run build:options && npm run build:popup",
    "build:background": "esbuild src/background.js --bundle --outfile=dist/background.js",
    "build:options": "esbuild src/options.js --bundle --outfile=dist/options.js",
    "build:popup": "esbuild src/popup.js --bundle --outfile=dist/popup.js",
    "lint": "eslint src",
    "test": "jest"
  },
  "jest": {
    "verbose": true
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-regexp": "^1.5.1",
    "jest": "^27.5.1"
  }
}
